# Zookeeper
ZOOKEEPER_CLIENT_PORT=2181

# ----------------------------
# DATABASE CONFIGURATION
# ----------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=processed_db
DB_USER=user
DB_PASSWORD=pass

MYSQL_ROOT_PASSWORD=root
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=source_db
MYSQL_USER=user
MYSQL_PASSWORD=pass

POSTGRES_DB=airflow
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow

# ----------------------------
# KAFKA CONFIGURATION
# ----------------------------
KAFKA_BROKER=kafka:9092
KAFKA_TOPIC=sensor_readings
KAFKA_ACKS_MODE=all
KAFKA_BROKER_ID=1
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
KAFKA_LISTENERS=PLAINTEXT://0.0.0.0:9092
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092

# ----------------------------
# SPARK CONFIGURATION
# ----------------------------
SPARK_MASTER_URL=local[2]
SPARK_APP_NAME=StreamingETL
SPARK_DRIVER_MEMORY=4g
SPARK_EXECUTOR_MEMORY=2g

# ----------------------------
# AIRFLOW CONFIGURATION
# ----------------------------
AIRFLOW_CONN_POSTGRES=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${DB_HOST}:${DB_PORT}/${POSTGRES_DB}
AIRFLOW_CONN_MYSQL=mysql://${MYSQL_USER}:${MYSQL_PASSWORD}@mysql:${MYSQL_PORT}/${MYSQL_DATABASE}
AIRFLOW_CONN_AIRFLOW_DB=mysql://${MYSQL_USER}:${MYSQL_PASSWORD}@mysql:${MYSQL_PORT}/${MYSQL_DATABASE}
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__FERNET_KEY=""
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=true
AIRFLOW__CORE__LOAD_EXAMPLES=false
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@postgres:${DB_PORT}/airflow
AIRFLOW__WEBSERVER__SECRET_KEY=ass
AIRFLOW__CORE__DEFAULT_TIMEZONE=Europe/Moscow
AIRFLOW_UID=$(id -u)

# ----------------------------
# MINIO / S3 CONFIGURATION
# ----------------------------
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=minio123
MINIO_BUCKET_RAW=raw-data
MINIO_BUCKET_PROCESSED=processed-data
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=minio123

# ----------------------------
# MLFLOW CONFIGURATION
# ----------------------------
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=device_readings_experiment

# ----------------------------
# PROMETHEUS CONFIGURATION
# ----------------------------
PROMETHEUS_CONFIG_PATH=/etc/prometheus/prometheus.yml
PROMETHEUS_PORT=9090

# ----------------------------
# GRAFANA CONFIGURATION
# ----------------------------
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASS=admin
DASHBOARDS_PATH=./monitoring/grafana_dashboards

# ----------------------------
# FEATURE STORE (Feast) CONFIGURATION
# ----------------------------
FEAST_REPO_PATH=./feature_repo

# ----------------------------
# TABLEAU CONFIGURATION
# ----------------------------
TABLEAU_SERVER=https://your-tableau-server.com
TABLEAU_SITE_ID=
TABLEAU_USERNAME=admin
TABLEAU_PASSWORD=admin
TABLEAU_PROJECT_ID=project_uuid

# ----------------------------
